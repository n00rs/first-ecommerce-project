
<div class="container mt-2">
    <div class="row col-md-2 ms-auto">
    <a class="btn btn-primary " href="/admin/add-product">Add Products</a>
  </div>
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.prodName}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td><img src="/public/product-image/{{this._id}}.jpg" style="width: 50px;height: 50px;" alt="" srcset=""></td>
      <td>
        <a href="/admin/edit-product?id={{this._id}}" class="btn btn-outline-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Delete Item {{this.prodName}} ?')" class="btn btn-outline-danger">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>